<ul id="lists">
  <% sort_list(@lists) do |list, index| %>
    <li class="<%= completed?(list) %>">
      <a href="/lists/<%= index %>">
        <h2><%= list[:name] %></h2>
        <p><%= remaining_todos(list) %> / <%= count_todos(list) %></p>
      </a>
    </li>
  <% end %>
</ul>

<% content_for :header_links do %>
  <a class="add" href="/lists/new">Add New List</a>
<% end %>
